
<section id="banner" style="background: url(../img/noticia.jpeg);background-size:contain !important">
    <header>
        <h2 style="color: black; font-weight: bold; font-size: 60px " id="hed">
            Noticias TELIA</h2>
    </header> 
    <div class="container contObras">
        <div class="row ">
            {{#each lista}} 
            <div class="col-xs-12 col-md-5 obra transparent" id="divContenerdor">
                <div class='tituloNOT'>{{titulo}}</div>
                <div class='titulo'>{{nombre}}</div>
                {{#if esVideo}} 
                <div class="fotoObra"><iframe width="400" height="315" src="{{multimedia}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe></div>
                {{else}} 
                <div class="fotoObra"><img src="{{multimedia}}"></div>
                {{/ if }}                 
                <div class="desc">
                    <h3>Descripcion:</h3>
                    <p style="color: black">{{descripcion}}</p>
                    <br>
                    <!--<a href="/editarNoticia/{{external_id}}" class="btn btn-custom btn-lg ">Editar</a>--> 
                </div>
                {{#if ESasistente}}
                <a   href="/editarNoticia/{{external_id}}" data-toggle="modal" data-target="#exampleModal_editar" data-whatever="@mdo" id="i" class="btn btn-info botonAbajo">Editar</a>
                {{/ if}}
            </div>
            {{/ each}} 
        </div>
    </div>
</section>

<script type="text/javascript">

    function ingresar() {
        $('#divIngreso').removeClass('hidden');
    }
    function actualizar() {
        $('#divIngreso').addClass('hidden');

    }
</script>

