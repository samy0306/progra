<section id="banner" style="background: url(../img/intro-reserva.jpg) center center !important;background-size:cover !important">
    <div class="inner">
        <header>
            <h2 style="color: white; font-weight: bold">Actualizar Boletos</h2>
        </header>
        <form class="login100-form validate-form" id='fomr_Registro' method='POST' action='/registro/actualizarReserva'>
            <input type="hidden" name="external" value="{{listRes.external_id}}"/>
            <input type="hidden" name="fecaHoy" value="{{listRes.fechaReserva}}"/>
            <input type="hidden" name="fechaRetiro" value="{{listRes.fechasRetiroBoletos}}"/>


            <br>
            <div class="wrap-input100 validate-input" data-validate="Ingrese el Numero de boletos">
                <span class="label-input100">Cantidad Boletos</span>
                <br>
                <input class="combo" type="number" name="boletos" min="1" max="5" value="{{listRes.numBoletos}}">
                <span class="focus-input100" data-symbol="&#xf190;"></span>
            </div>
            <br>
            <div class="wrap-input100 validate-input" data-validate="Ingrese el nombre de la obra">
                <span class="label-input100">Obra</span>
                <br>
                <input class="combo" type="text" name="titulo" value="{{ObraSelect.nombre}}" readonly >
            </div>
            <br>
            <div class="flex-col-c p-t-30">
                <div class="wrap-login100-form-btn">
                    <div class="login100-form-bgbtn"></div>
                    <br>
                    <button class="login100-form-btn" >
                        Actualizar
                    </button>
                </div>
            </div>
            <br>
        </form>
    </div>

</section>

<script>
    var j = jQuery.noConflict();
    j().ready(function () {
        j("#fomr_Registro").validate({
            rules: {
                nombre: {
                    required: true,
                    minlength: 3
                },
                multimedia: {
                    required: true
                },
                descripcion: {
                    required: true,
                    minlength: 5
                },
                genero: {
                    required: true
                },
                autor: {
                    required: true,
                    minlength: 5
                },
                fecha: {
                    required: true
                },
                hora: {
                    required: true
                },
                boletos: {
                    required: true
                }
            },
            messages: {
                nombre: {
                    required: "Ingrese el nombre de la obra",
                    minlength: "Minimo 3 caracteres"
                },
                multimedia: {
                    required: "Ingrese la url"
                },
                descripcion: {
                    required: "Ingrese su nombre",
                    minlength: "Minimo 5 caracteres"
                },
                genero: {
                    required: "Ingrese el genero"
                },
                autor: {
                    required: "Ingrese el nombre del autor",
                    minlength: "Minimo 5 caracteres"
                },
                fecha: {
                    required: "Ingrese la fecha"
                },
                hora: {
                    required: "Ingrese la hora"
                },
                lugar: {
                    required: "Ingrese el lugar",
                    minlength: "Minimo 5 caracteres"
                }
            }
        });
    });
</script>
