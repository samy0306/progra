                    {{#each obras}}
                    <option class="in2" value="{{idObra}}">{{nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <br>
            <div class="flex-col-c p-t-30">
                <div class="wrap-login100-form-btn">
                    <div class="login100-form-bgbtn"></div>
                    <br>
                    <button class="login100-form-btn" >
                        Registrar
                    </button>
                </div>
            </div>
            <br>
        </form>
    </div>

</section>
