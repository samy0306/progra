<section id="banner" style="background: url(../img/intro-reserva.jpg) center center !important;background-size:cover !important">
    <div class="inner">
        <header>
            <h2 style="color: white; font-weight: bold">Registrar Reserva</h2>
        </header>
        <form class="login100-form validate-form" id='fomr_Registro' method='POST' action='/registro/guardarReserva'>
            <input  class="hidden" type="text"  placeholder="cedula" name="fechahoy" id="fechahoy">
            <input  class="hidden" type="text"  placeholder="cedula" name="fechaRetiro" id="fechaRetiro">
